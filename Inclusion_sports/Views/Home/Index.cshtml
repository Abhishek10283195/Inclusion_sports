
@{
	ViewBag.Title = "Pride MelbSports";
	Layout = "~/Views/_MyLayoutPage.cshtml";
}
<style>
		.container .row .col-sm-4 img {
			max-width: 360px;
			height: 280px;
		}

		.tp-banner-container .tp-banner img {
			width: 100%;
		}

		.tp-banner-container {
			background-image: url('../../images/joshua-burdick-unsplash-169-3.jpg');
			height: 650px;
			background-size: cover;
			background-repeat: no-repeat;
		}

			.tp-banner-container .tp-banner .container {
				line-height: 1.6;
				text-align: center;
				color: white;
				font-family: 'montserratregular';
				max-width: 960px;
			}

	.home-slider {
		top: 70px;
	}

		#showcase h1 {
			text-align: center;
			font-size: 48px;
			font-family: 'montserratregular';
			color: white;
			font-size: 50px;
			line-height: 1.3;
			position: relative;
			animation: heading;
			animation-duration: 2s;
			animation-fill-mode: forwards;
		}

		@@keyframes heading {
			0% {
				top: -50px;
			}

			100% {
				top: 200px;
			}
		}

		#content {
			font-size: 20px;
			position: relative;
			animation-name: content;
			animation-duration: 2s;
			animation-fill-mode: forwards;
		}

		@@keyframes content {
			0% {
				top: -50px;
			}

			100% {
				top: 200px;
			}
		}

		.icon img {
			height: 38px;
			width: 50px;
		}

		.container .tittle p {
			color: #989898;
			font-size: 16px;
			line-height: 28px;
			font-family: 'montserratlight';
		}

		.row .col-sm-4 p {
			color: #989898;
			font-size: 16px;
			line-height: 28px;
			font-family: 'montserratlight';
		}

		.home-slider {
			padding-top: 0px;
		}

		span {
			font-weight: bold;
		}
	</style>
