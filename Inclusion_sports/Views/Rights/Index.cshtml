	#gamec {
		width: 800px;
		max-width: 80%;
		background-color: white;
		padding: 10px;
		border-radius: 5px;
		box-shadow: 0 0 10px 2px;
	}

	.btn-grid {
		display: grid;
		grid-template-columns: repeat(2, auto);
		gap: 10px;
		margin-top: 20px;
	}

	#btnjs {
		background-color: hsl(200, 100%, 50%);
		border: 1px solid hsl(200, 100%, 30%);
		border-radius: 5px;
		padding: 5px 10px;
		color: white;
		outline: none;
	}

	.btn:hover {
		border-color: black;
	}

	.jumbotron .title h4 {
		font-family: 'Montserrat', sans-serif;
		text-align: center;
	}


	.jumbotron .title p {
		font-family: 'Montserrat', sans-serif;
		text-align: center;
	}

	.jumbotron p {
		font-size: 20px;
	}
</style>

<section class="sectoion-100px knowrights">
	<div class="jumbotron">
		<div class="title">
			<h4>WHAT DO YOU WANT TO DO TODAY?</h4>
			<div class="col-md-6">
				<p>Read through a few scenarios to know more about your rights in Sports</p>
				<p><a class="btn btn-default" href='#.'>Know your rights &raquo;</a></p>
			</div>
			<div class="col-md-6">
				<p>Report an incident or tell us how you feel</p>
				<p><a class="btn btn-default" href='@Url.Action("Create", "Reporting")'>Report Incident &raquo;</a></p>
			</div>
		</div>
	</div>
</section>

<div class="container" id="gamec">
	<div id="heading"><h3>Text</h3></div>
	<div id="text">Text</div>
	<div id="bot">Text</div>
	<div id="option-buttons" class="btn-grid">
		<button class="btn" id="btnjs">Option 2</button>
		<button class="btn" id="btnjs">Option 3</button>
		<button class="btn" id="btnjs">Option 4</button>
	</div>
</div>

@section Scripts{
<script>
	const textElement = document.getElementById('text')
	const headElement = document.getElementById('heading')
	const botElement = document.getElementById('bot')
	const note = document.querySelector('#heading')
	const bot = document.querySelector('#bot')
	const optionButtonsElement = document.getElementById('option-buttons')

	note.style.fontSize = '22px'
	note.style.fontWeight = 'bold'
	bot.style.fontWeight = 'bold'

	let state = {}

	function startGame() {
		state = {}
		showTextNode(1)
	}

	function showTextNode(textNodeIndex) {
		const textNode = textNodes.find(textNode => textNode.id === textNodeIndex)
		headElement.innerText = textNode.head
		textElement.innerText = textNode.text
		botElement.innerText = textNode.bot
		while (optionButtonsElement.firstChild) {
			optionButtonsElement.removeChild(optionButtonsElement.firstChild)
		}

		textNode.options.forEach(option => {
			if (showOption(option)) {
				const button = document.createElement('button')
				button.innerText = option.text
				button.classList.add('btn')
				button.addEventListener('click', () => selectOption(option))
				optionButtonsElement.appendChild(button)
			}
		})
	}

	function showOption(option) {
		return option.requiredState == null || option.requiredState(state)
	}

	function selectOption(option) {
		const nextTextNodeId = option.nextText
		if (nextTextNodeId <= 0) {
			return startGame()
		}
		state = Object.assign(state, option.setState)
		showTextNode(nextTextNodeId)
	}

